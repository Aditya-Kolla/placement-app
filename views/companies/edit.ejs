<% include ../partials/header %>

  <div class="wrapper">
    <div class="container">
      <div class="center-container">
        <h1>EDIT COMPANY</h1>
        <form action="/companies/<%= company._id %>?_method=PUT" method="POST">
          <div class="form-group">
            <label for="inputName">Company Name</label>
            <input type="text" name="company[name]" class="form-control" id="inputName" placeholder="Enter company name" value="<%= company.name %>"
              required>
          </div>
          <div class="form-group">
            <label for="inputImage">Company Logo</label>
            <input type="text" name="company[logo]" class="form-control" id="inputImage" placeholder="Paste company logo url" value="
                        <%= company.logo %>" required>
          </div>
          <div class="form-group">
            <label for="inputAbout">Company description</label>
            <textarea name="company[about]" class="form-control" id="inputImage" placeholder="Something about the company" rows="5" required><%- company.about %></textarea>
          </div>
          <button type="submit" class="btn btn-primary btn-block">Update</button>
        </form>
      </div>
    </div>
  </div>

  <% include ../partials/footer %>