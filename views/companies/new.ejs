<% include ../partials/header %>

<div class="container main">
    <div class="center-container">
        <h1>CREATE NEW COMPANY</h1>
        <form action="/companies" method="POST">
            <div class="form-group">
                <label for="inputName">Company Name</label>
                <input type="text" name="company[name]" class="form-control" id="inputName" placeholder="Enter company name" required>
            </div>
            <div class="form-group">
                <label for="inputImage">Company Logo</label>
                <input type="text" name="company[logo]" class="form-control" id="inputImage" placeholder="Paste company logo url" required>
            </div>
            <div class="form-group">
                <label for="inputAbout">Company description</label>
                <textarea name="company[about]" class="form-control" id="inputImage" placeholder="Something about the company" rows="5" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Create</button>
        </form>
    </div>
</div>

<% include ../partials/footer %>